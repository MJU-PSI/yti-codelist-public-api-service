{
  "dynamic_templates": [
    {
      "prefLabel": {
        "path_match": "prefLabel.*",
        "mapping": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "normalizer": "keyword_normalizer"
            }
          }
        }
      }
    }
  ],
  "properties": {
    "id": {
      "type": "keyword"
    },
    "order": {
      "type": "integer"
    },
    "sequenceId": {
      "type": "integer"
    },
    "extension": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "codeValue": {
          "type": "text",
          "analyzer": "text_analyzer"
        }
      }
    }
  }
}